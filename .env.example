# Database (PostgreSQL)
DATABASE_URL=postgresql://username:password@host/database?sslmode=require

# Auth.js
AUTH_SECRET=  # Generate with: npx auth secret
AUTH_DISCORD_ID=  # Discord OAuth app client ID
AUTH_DISCORD_SECRET=  # Discord OAuth app client secret

# Discord
DISCORD_GUILD_ID=  # Your Discord server ID (right-click server > Copy Server ID)
DISCORD_OFFICER_ROLES_IDS=  # Comma-separated officer role IDs (e.g., 123456789,987654321)
# DISCORD_MEMBER_ROLES_IDS=  # Optional: comma-separated member role IDs
DISCORD_DROPTIMIZER_CHANNEL_ID=  # Channel ID for droptimizer sync
DISCORD_BOT_TOKEN=  # Bot token from Discord Developer Portal > Bot section

# Battle.net API (required - for character data sync)
BNET_CLIENT_ID=  # Battle.net API client ID from develop.battle.net
BNET_CLIENT_SECRET=  # Battle.net API client secret

# Cron jobs (optional)
# CRON_SECRET=  # Secret for authenticating cron job requests

# Dev overrides (optional - for local development/testing)
# OVERRIDE_RAIDBOTS_BASE_URL=https://www.raidbots.com/static/data/ptr  # Use PTR raidbots data
# NEXT_PUBLIC_OVERRIDE_CURRENT_SEASON=16  # Override current season (valid: 1, 2, 3, 16)
# NEXT_PUBLIC_OVERRIDE_WOWHEAD_HOST=www.wowhead.com/ptr  # Use PTR wowhead tooltips (or www.wowhead.com/beta)
