# Database (PostgreSQL)
DATABASE_URL=postgresql://username:password@host/database?sslmode=require

# Auth.js
AUTH_SECRET=  # Generate with: npx auth secret
AUTH_DISCORD_ID=  # Discord OAuth app client ID
AUTH_DISCORD_SECRET=  # Discord OAuth app client secret

# Discord
DISCORD_GUILD_ID=  # Your Discord server ID (right-click server > Copy Server ID)
DISCORD_ALLOWED_ROLES=  # Comma-separated role IDs (e.g., 123456789,987654321)
DISCORD_DROPTIMIZER_CHANNEL_ID=  # Channel ID for droptimizer sync
DISCORD_BOT_TOKEN=  # Bot token from Discord Developer Portal > Bot section

# Battle.net API (required - for character data sync)
BNET_CLIENT_ID=  # Battle.net API client ID from develop.battle.net
BNET_CLIENT_SECRET=  # Battle.net API client secret
