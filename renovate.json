{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:recommended"],
    "labels": ["dependencies"],
    "stabilityDays": 3,
    "packageRules": [
        {
            "description": "Group all patch updates together",
            "matchUpdateTypes": ["patch"],
            "groupName": "all patch dependencies",
            "groupSlug": "all-patch"
        }
    ],
    "docker-compose": {
        "enabled": true
    }
}
